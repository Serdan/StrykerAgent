<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>stryker-agent</ToolCommandName>
    <PackageId>stryker-agent</PackageId>
    <Version>0.1.1</Version>
    <Authors>Stryker</Authors>
    <Description>AI-accessible interface for Stryker.NET mutation reports.</Description>
    <PackageOutputPath>$(Home)/nuget</PackageOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Data.Sqlite" Version="8.0.8"/>
    <PackageReference Include="System.CommandLine" Version="2.0.0-beta4.22272.1"/>
  </ItemGroup>


</Project>
